<layouts>
    <layout id="Summary">
        <text-area id="title" text="@Strings.AppName" personality="
            prompt_color_dark__title
            prompt_size__title
            prompt_loc__title
            prompt_font__title
        " />

        <text-area id="body"
            text="@Strings.loading"
            width="fill"
            height="600"
            justification="Graphics.TEXT_JUSTIFY_LEFT"
            font="Graphics.FONT_SYSTEM_XTINY"
            personality="
            prompt_color_dark__body
            prompt_loc__body_with_title
        " />
    </layout>

    <layout id="Gcm">
        <label x="center" y="70" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" text="@Strings.connectString1" />
        <label x="center" y="90" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" text="@Strings.connectString2" />
    </layout>
</layouts>